<h1 class="text-center">Image Generator</h1>

<form action="/" method="post">
    <input  type="text" 
            class="form-control mb-2" 
            placeholder="Enter image params" 
            required 
            name="prompt"
        /> 

    <select name="size" class="form-control mb-2">
        <option value="256x256">Small</option>
        <option value="512x512">Medium</option>
        <option value="1024x1024">Large</option>
    </select>

    <input type="number"
            name="number"
            class="form-control mb-2"
            value="1"
    />

    <button type="submit" class="btn btn-primary">Generate</button>
</form>

{{#if images}}
    <div>
        {{#each images}}
            <img src="{{this.url}}" class="img-fluid rounded"/>
        {{/each}}
    </div>
{{/if}}

{{#if error}}
        <div class="alert alert-danger mt-4" role="alert">
            <h4 class="alert-heading mb-2">Error!</h4>
                <p>Your request was rejected as a result of our safety system.</p>
                <p class="mb-1">Your prompt may contain text that is not allowed by our safety system.</p>
                <hr>
                <p class="mb-0">Please, use another request text.</p>
        </div>
{{/if}}